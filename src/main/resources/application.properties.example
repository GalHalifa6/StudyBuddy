# Backend Application Properties
# Copy this file to application.properties and update with your values

# Server Configuration
server.port=8080
server.servlet.context-path=/

# Database Configuration (PostgreSQL)
# Environment variables override these defaults (used in Docker)
# For local development: Set SPRING_DATASOURCE_URL, SPRING_DATASOURCE_USERNAME, SPRING_DATASOURCE_PASSWORD
# For Docker: These are set via docker-compose.yml environment variables
spring.datasource.url=${SPRING_DATASOURCE_URL:jdbc:postgresql://localhost:5432/studybuddy}
spring.datasource.driverClassName=${SPRING_DATASOURCE_DRIVER_CLASS_NAME:org.postgresql.Driver}
spring.datasource.username=${SPRING_DATASOURCE_USERNAME:studybuddy}
spring.datasource.password=${SPRING_DATASOURCE_PASSWORD:studybuddy_password}

# JPA/Hibernate Configuration
spring.jpa.database-platform=${SPRING_JPA_DATABASE_PLATFORM:org.hibernate.dialect.PostgreSQLDialect}
# Use 'update' for production, 'create' only for initial schema creation
spring.jpa.hibernate.ddl-auto=${SPRING_JPA_HIBERNATE_DDL_AUTO:update}
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=true

# H2 Console (disabled for PostgreSQL)
spring.h2.console.enabled=false
spring.h2.console.path=/h2-console

# JWT Configuration
jwt.secret=your-secret-key-change-in-production-min-256-bits
jwt.expiration=86400000

# File Upload Configuration
file.upload-dir=./uploads
file.max-size=10485760

# CORS Configuration (comma-separated allowed origins)
# Leave empty or set to * to allow all origins (development only)
# Production: Set specific origins like: http://localhost:3000,https://yourdomain.com
cors.allowed-origins=*

# Logging
logging.level.com.studybuddy=INFO
logging.level.org.springframework.web=INFO

