# StudyBuddy Docker Environment Variables
# Copy this file to .env and fill in your actual values
# 
# To use: Copy this file to .env and uncomment/fill in the values you need
# cp env.example .env

# ============================================
# Backend Configuration
# ============================================

# JWT Secret (REQUIRED - Change this in production!)
JWT_SECRET=mySecretKeyForStudyBuddyPlatformChangeInProduction

# JWT Expiration (milliseconds, default: 24 hours)
JWT_EXPIRATION=86400000

# ============================================
# Database Configuration
# ============================================

# PostgreSQL credentials (used in docker-compose.yml)
POSTGRES_DB=studybuddy
POSTGRES_USER=studybuddy
POSTGRES_PASSWORD=studybuddy_password

# ============================================
# OAuth2 Configuration (Optional)
# ============================================

# Google OAuth2 (for Google login)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# ============================================
# Email Configuration (Optional)
# ============================================

# SendGrid API Key (for email notifications)
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Email sender address
MAIL_FROM_ADDRESS=noreply@studybuddy.com

# ============================================
# Jitsi Configuration (Optional)
# ============================================

# Jitsi JaaS credentials (for video sessions)
JITSI_KID=your-jitsi-kid-here
JITSI_PRIVATE_KEY=your-jitsi-private-key-here

# ============================================
# Frontend Configuration
# ============================================

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Frontend port (default: 3000)
FRONTEND_PORT=3000

# API Base URL for frontend (when running in Docker, use backend service name)
# For Docker: http://backend:8080
# For local development: http://localhost:8080
VITE_API_BASE_URL=http://localhost:8080

# WebSocket Base URL for frontend
# For Docker: ws://backend:8080
# For local development: ws://localhost:8080
VITE_WS_BASE_URL=ws://localhost:8080

# ============================================
# Mobile App Configuration
# ============================================

# API Base URL for mobile app
# For localhost/emulator: http://localhost:8080
# For physical device: http://YOUR_MACHINE_IP:8080
# For Docker backend: http://YOUR_MACHINE_IP:8080 (use host IP, not container name)
EXPO_PUBLIC_API_BASE_URL=http://localhost:8080

# WebSocket Base URL for mobile app
# For localhost/emulator: ws://localhost:8080
# For physical device: ws://YOUR_MACHINE_IP:8080
EXPO_PUBLIC_WS_BASE_URL=ws://localhost:8080

